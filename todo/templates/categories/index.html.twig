{% extends 'base.html.twig' %}

{% block title %}Hello TasksController!
{% endblock %}

{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
	</style>
<a href="{{ path ('app_home')}}">{{'Back to home tasks'|trans}}</a>

	<div class="d-flex justify-content-center mt-5">
    <div class="col-md-6">
        <table class="table  table-striped text-center">
            <thead>
                <tr>
                    <th class="display-5 text-center mt-5 mb-3">{{ 'Associated tasks'|trans }}</th>
                </tr>
            </thead>
            <tbody class="">
                {% for task in tasks %}
                    <tr>
                        <td>- {{ task.name }}</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>

{% endblock %}
